<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Ã¡rbol para Autor -->
    <record id="view_autor_tree" model="ir.ui.view">
        <field name="name">autor.tree</field>
        <field name="model">modulogfb.autor</field>
        <field name="arch" type="xml">
            <list string="Autores">
                <field name="name"/>
                <field name="nacionalidad"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario para Autor -->
    <record id="view_autor_form" model="ir.ui.view">
        <field name="name">autor.form</field>
        <field name="model">modulogfb.autor</field>
        <field name="arch" type="xml">
            <form string="Autor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="nacionalidad"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
